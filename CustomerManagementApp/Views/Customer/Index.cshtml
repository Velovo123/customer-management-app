@model IEnumerable<CustomerManagementApp.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>No customers found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Email</td>
                    <td>@customer.PhoneNumber</td>
                    <td>
                        <a href="@Url.Action("Details", "Customer", new { id = customer.Id })">Details</a> |
                        <a href="@Url.Action("Edit", "Customer", new { id = customer.Id })">Edit</a> |
                        <a href="@Url.Action("Delete", "Customer", new { id = customer.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
